request_vacation = {}
request_leave = {}
request_overtime = {}
vacation_update = {}
leave_update = {}
overtime_update = {}

class Employee() :
    def __init__(self):
        self.name = ["Mary","Valentine","Amara","Faith","John"]
        self.request_vacation = {}
        self.request_leave = {}
        self.request_overtime = {}
        self.vacation_update = {}
        self.leave_update = {}
        self.overtime_update = {}
        self.is_logged_in = 0
        self.logged_name = ""

    def login(self) :
        if self.is_logged_in <= 0 :
           user = input("Enter name: ").strip().title()
           if user in self.name :
              print(f"You are successfully logged in as {user}")
              self.is_logged_in = self.is_logged_in + 1
              self.logged_name = user
           else :
            print("Name doesn't exist!")
        elif self.is_logged_in >= 1 :
            user = input("Enter name: ").strip().title()
            if user in self.name :
                print(f"You are sucessfully logged in as {user}")
            else :
                print("Name doesn't exist!")

    def request_vac(self) :
        user_name = input("Enter name: ").strip().title()
        if user_name in self.name :
            if user_name == self.logged_name :
               user = input("How long do you wanna take? ").strip()
               request_vacation.update({user_name:user})
               print("Request has been sent, kindly wait for approval")
            else :
                print(f"You are already logged in as {self.logged_name}")
        else :
            print("Name doesn't exist")

    def request_leav(self) :
        user_name = input("Enter name: ").strip().title()
        if user_name in self.name :
            if user_name == self.logged_name:
               user = input("How long do you wanna take? ").strip()
               request_leave.update({user_name:user})
               print("Request has been sent, kindly wait for approval")
            else :
                print(f"You are already logged in as {self.logged_name}")
        else :
            print("Name doesn't exist")

    def request_over(self) :
        user_name = input("Enter name: ").strip().title()
        if user_name in self.name :
            if user_name == self.logged_name :
               user = input("How long do you wanna take? ").strip()
               request_overtime.update({user_name:user})
               print("Request has been sent, kindly wait for approval")
            else :
                print(f"You are already logged in as {self.logged_name}")
        else :
            print("Name doesn't exist")

    def check_vacation_update(self) :
       if self.is_logged_in != 1:
            print("Kindly log in to access this feature")
       else :
             if len(vacation_update.items()) <= 0 :
                print("No updates yet!")
             else :
               print(vacation_update)
    def check_leave_update(self) :
        if self.is_logged_in != 1:
            print("Kindly log in to access this feature")
        else :
             if len(leave_update.items()) <= 0 :
                print("No updates yet!")
             else :
               print(leave_update)
    
    def check_overtime_update(self) :
        if self.is_logged_in != 1:
            print("Kindly log in to access this feature")
        else :
             if len(overtime_update.items()) <= 0 :
                print("No updates yet!")
             else :
               print(overtime_update)


           

class Manager(Employee) :
    def __init__(self):
        super().__init__()
        self.managers = ["Obinna","Philip"]
        self.employees = ["Mary","Valentine","Amara","Faith","John"]
        self.logged_in = 0
        self.manager_logged = ""
    

    def login(self) :
        if self.logged_in <= 0 :
           user = input("Enter name: ").strip().title()
           if user in self.managers :
              print(f"You are successfully logged in as {user}")
              self.logged_in = self.logged_in + 1
              self.manager_logged = user
           elif user in self.employees :
               print("Way out of your league man! This portal is for managers only")
           else :
               print("Name doesn't exist!")
        elif self.logged_in >= 1:
               user = input("Enter name: ").strip().title()
               if user in self.managers :
                    print(f"You are successfully logged in as {user}")
               
            
    def request_vac(self) :
        if self.logged_in != 1 :
          print("Log in to access this feature")
        else :
           input("How long do you wanna take? ").strip()
           print("Vacation is approved")
        
    def request_leav(self) :
       if self.logged_in != 1 :
          print("Log in to access this feature")
       else :
           input("How long do you wanna take? ").strip()
           print("Leave is approved")

    def request_over(self) :
       if self.logged_in != 1 :
          print("Log in to access this feature")
       else :
           input("How long do you wanna take? ").strip()
           print("Overtime is approved")
    
    def approve_vac(self) :
        user_name = input("Enter name: ").strip().title()
        if user_name == self.manager_logged :
            
            if len(request_vacation.items()) != 0:
               items = list(request_vacation.items())
               
               if items[0] in items :
                  print(items[0])
                  user = input("Approve or reject: ").strip().lower()
                  if user == "approve" :
                    vacation_update.update({items[0][0] : "Approved"})
                    print("Request has been approved")
                  elif user == "reject" :
                    vacation_update.update({items[0][0] : "Rejected"})
                    print("Request has been rejected")
                  else :
                    print("Invalid input")
               
               elif items[1] in items :
                    print(items[1])
                    user = input("Approve or reject: ").strip().lower()
                    if user == "approve" :
                       vacation_update.update({items[1][0] : "Approved"})
                       print("Request has been approved")
                    elif user == "reject" :
                       vacation_update.update({items[1][0] : "Rejected"})
                       print("Request has been rejected")
                    else :
                       print("Invalid input")
               
               elif items[2] in items :
                    print(items[2])
                    user = input("Approve or reject: ").strip().lower()
                    if user == "approve" :
                       vacation_update.update({items[2][0] : "Approved"})
                       print("Request has been approved")
                    elif user == "reject" :
                      vacation_update.update({items[2][0] : "Rejected"})
                      print("Request has been rejected")
                    else :
                      print("Invalid input")
               
               elif items[3] in items :
                    print(items[3])
                    user = input("Approve or reject: ").strip().lower()
                    if user == "approve" :
                       vacation_update.update({items[3][0] : "Approved"})
                       print("Request has been approved")
                    elif user == "reject" :
                       vacation_update.update({items[3][0] : "Rejected"})
                       print("Request has been rejected")
                    else :
                       print("Invalid input")
               
               elif items[4] in items :
                    print(items[4])
                    user = input("Approve or reject: ").strip().lower()
                    if user == "approve" :
                       vacation_update.update({items[4][0] : "Approved"})
                       print("Request has been approved")
                    elif user == "reject" :
                       vacation_update.update({items[4][0] : "Rejected"})
                       print("Request has been rejected")
                    else :
                       print("Invalid input")
               
               elif items[5] in items :
                    print(items[5])
                    user = input("Approve or reject: ").strip().lower()
                    if user == "approve" :
                       vacation_update.update({items[5][0] : "Approved"})
                       print("Request has been approved")
                    elif user == "reject" :
                       vacation_update.update({items[5][0] : "Rejected"})
                       print("Request has been rejected")
                    else :
                       print("Invalid input")
            
            else:
                print("There are no requests yet")
        
        elif user_name in self.employees :
            print("Way out of your league man! This is for managers only")
        
        elif user_name in self.managers :
            print(f"You are already logged in as {self.manager_logged}")
        
        else :
            print("Username doesn't exist!")
        
