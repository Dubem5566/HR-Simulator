m = Manager()
e = Employee()

def employee_options() :
    while True :
          print("Enter 1 to login as manager")
          print("Enter 2 to apply for vacation")
          print("Enter 3 to apply for leave")
          print("Enter 4 to apply for overtime")
          print("Enter 5 to check vacation update")
          print("Enter 6 to check leave update")
          print("Enter 7 to check overtime update")
          employee_choice = input("Enter choice: ").strip()
          if employee_choice == "1" :
                    m.login()
                    print("Enter 1 to login as employee")
                    print("Enter 2 to apply for vacation")
                    print("Enter 3 to apply for leave")
                    print("Enter 4 to apply for overtime")
                    print("Enter 5 to approve or reject vacation requests")
                    print("Enter 6 to approve or reject leave requests")
                    print("Enter 7 to approve or reject overtime requests")
                    manager_choice = input("Enter choice: ").strip()
                    if manager_choice == "1" :
                                 e.login()
                    elif manager_choice == "2" :
                                 m.request_vac()
                    elif manager_choice == "3" :
                                 m.request_leav()
                    elif manager_choice == "4" :
                                 m.request_over()
                    elif manager_choice == "5" :
                                 m.approve_vac()
                    elif manager_choice == "6" :
                                 m.approve_leav()
                    elif manager_choice == "7" :
                                 m.approve_over()
                    else :
                                 print("Invalid input!")
          elif employee_choice == "2" :
                    e.request_vac()
          elif employee_choice == "3" :
                    e.request_leav()
          elif employee_choice == "4" :
                    e.request_over()
          elif employee_choice == "5" :
                    e.check_vacation_update()
          elif employee_choice == "6" :
                    e.check_leave_update()
          elif employee_choice == "7" :
                    e.check_overtime_update()
          else :
              print("Invalid input!")

def manager_options() :
    while True :
          print("Enter 1 to login as employee")
          print("Enter 2 to apply for vacation")
          print("Enter 3 to apply for leave")
          print("Enter 4 to apply for overtime")
          print("Enter 5 to approve or reject vacation requests")
          print("Enter 6 to approve or reject leave requests")
          print("Enter 7 to approve or reject overtime requests")
          manager_choice = input("Enter choice: ").strip()
          if manager_choice == "1" :
             e.login()
             print("Enter 1 to login as manager")
             print("Enter 2 to apply for vacation")
             print("Enter 3 to apply for leave")
             print("Enter 4 to apply for overtime")
             print("Enter 5 to check vacation update")
             print("Enter 6 to check leave update")
             print("Enter 7 to check overtime update")
             employee_choice = input("Enter choice: ").strip()
             if employee_choice == "1" :
                   m.login()
             elif employee_choice == "2" :
                   e.request_vac()
             elif employee_choice == "3" :
                   e.request_leav()
             elif employee_choice == "4" :
                   e.request_over()
             elif employee_choice == "5" :
                   e.check_vacation_update()
             elif employee_choice == "6" :
                   e.check_leave_update()
             elif employee_choice == "7" :
                   e.check_overtime_update()
             else :
                   print("Invalid input!")
          elif manager_choice == "2" :
             m.request_vac()
          elif manager_choice == "3" :
             m.request_leav()
          elif manager_choice == "4" :
             m.request_over()
          elif manager_choice == "5" :
             m.approve_vac()
          elif manager_choice == "6" :
             m.approve_leav()
          elif manager_choice == "7" :
             m.approve_over()
          else :
             print("Invalid input!")
                  

       
user = input("Enter 1 to login: ")
if user == "1" :
        user_choice = input("Do you want to login as employee or manager? ").strip().lower()
        if user_choice == "employee" : 
           e.login()
           while True :
               print("Enter 1 to login as manager")
               print("Enter 2 to apply for vacation")
               print("Enter 3 to apply for leave")
               print("Enter 4 to apply for overtime")
               print("Enter 5 to check vacation update")
               print("Enter 6 to check leave update")
               print("Enter 7 to check overtime update")
               employee_choice = input("Enter choice: ").strip()
               if employee_choice == "1" :
                   m.login()
                   manager_options()
               elif employee_choice == "2" :
                   e.request_vac()
               elif employee_choice == "3" :
                   e.request_leav()
               elif employee_choice == "4" :
                   e.request_over()
               elif employee_choice == "5" :
                   e.check_vacation_update()
               elif employee_choice == "6" :
                   e.check_leave_update()
               elif employee_choice == "7" :
                   e.check_overtime_update()
               else :
                   print("Invalid input!")

        elif user_choice == "manager" :
            m.login()
            while True :
                print("Enter 1 to login as employee")
                print("Enter 2 to apply for vacation")
                print("Enter 3 to apply for leave")
                print("Enter 4 to apply for overtime")
                print("Enter 5 to approve or reject vacation requests")
                print("Enter 6 to approve or reject leave requests")
                print("Enter 7 to approve or reject overtime requests")
                manager_choice = input("Enter choice: ").strip()
                if manager_choice == "1" :
                    e.login()
                    employee_options()
                elif manager_choice == "2" :
                    m.request_vac()
                elif manager_choice == "3" :
                    m.request_leav()
                elif manager_choice == "4" :
                    m.request_over()
                elif manager_choice == "5" :
                    m.approve_vac()
                elif manager_choice == "6" :
                    m.approve_leav()
                elif manager_choice == "7" :
                    m.approve_over()
                else :
                    print("Invalid input!")
else :
    print("Invalid input!")
       